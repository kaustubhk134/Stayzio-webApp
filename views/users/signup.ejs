<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">SignUp on Stayzio</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <lable for="username" class-="form-lable">Username</lable>
                <input name="username" id="username" placeholder="Enter Username" type="text" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="mb-3">
                <lable for="email" class-="form-lable">Email</lable>
                <input name="email" id="email" placeholder="Enter Email" type="email" class="form-control" required>
            </div>

            <div class="mb-3">
                <lable for="password" class-="form-lable">Password</lable>
                <input name="password" id="password" placeholder="Enter Password" type="password" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <button class="btn btn-success">SignUp</button>
        </form>
    </div>
</div>